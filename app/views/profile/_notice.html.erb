<div class="profile_notice">

  <div class="notice_cover">
    <ul class="nav nav-tabs title_nav" id="myTab" role="tablist">
      <li class="nav-item active green-nav width_max"style="width:100%">
        <a class="nav-link profile_history_change2" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">
          <i class="fas fa-comment-dots"></i>
          <div class="text_cover"style="font-size:18px;font-weight:bold">
            News List / お知らせ一覧
          </div>
        </a>
      </li>
    </ul>
    <%= render partial: "/layouts/lang_bar" %>

    <% there_be = false %>
    <% @user_infos.each do |userinfo| %>
      <%= link_to("/profile/7/#{userinfo.id}" , class:"thread_link") do %>
        <% there_be = true %>
        <div class="thread_cover link_cover">
          <div class="group_user_cover">
            <div class="group_img_cover">
              <%= image_tag "info.png", :class => "group_img" %>
            </div>
          </div>
          <div class="thread_content">
            <div class="post_content_cover">
              <div class="user_name">
                frefre office
                <div class="create_time"style="float:right">
                  <%= userinfo.created_at.strftime('%Y/%m/%d') %>
                </div>
              </div>
              <div class="post_content_position en_position">
                <div class="thread_title">
                  <div class="title_padding no_inline">
                    <%= simple_format(text_url_to_link(h(userinfo.title_en))) %>
                  </div>
                </div>
                <div class="post_content">
                  <div class="post_content_text no_inline">
                    <%= simple_format(text_url_to_link(h(userinfo.message_en))) %>
                  </div>
                </div>
                <div class="see_more">
                  See more
                </div>
              </div>
              <div class="post_content_position_space">
                <span class="slider_icon glyphicon glyphicon-resize-horizontal"></span>
              </div>
              <div class="post_content_position jp_position">
                <div class="thread_title">
                  <div class="title_padding no_inline">
                    <%= simple_format(text_url_to_link(h(userinfo.title_jp))) %>
                  </div>
                </div>
                <div class="post_content">
                  <div class="post_content_text no_inline">
                    <%= simple_format(text_url_to_link(h(userinfo.message_jp))) %>
                  </div>
                </div>
                <div class="see_more">
                  See more
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <% if there_be == false %>
      <div class="not_found">
        <div class="en">
          There is no notices.
        </div>
        <div class="jp">
          お知らせはありません
        </div>
      </div>
    <% else %>

      <%= paginate @user_infos  , outer_window: 3%>
    <% end %>
  </div>
</div>
