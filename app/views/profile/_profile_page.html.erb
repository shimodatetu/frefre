<form>
  <div class="profile_title">
    <div class="title">
      <div class="jp">
        プロフィール
      </div>
      My Profile
      <div class="save_button btn btn-default">
        Save / 保存
      </div>
    </div>
  </div>
  <div class="profile_page row">
    <div class="profile_page_en">
      <div class="col-sm-12">
      <div class="col-sm-12 profile_content">
        <div class="row profile_content_data">
          <div class="content_name">
            <div class="jp">
              プロフィールを公開する
            </div>
            <div class="en">
              Disclose Profile
            </div>
          </div>
          <div class=""style="width:70%;">
            <div class="no_text">
              NO
            </div>
            <div class="switch">
              <input id="cmn-toggle-1" class="cmn-toggle cmn-toggle-round" type="checkbox"
              <% if current_user.able_see == true %>
                checked
              <% end %>>
              <label for="cmn-toggle-1"></label>
            </div>
            <div class="yes_text">
              YES
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12 profile_content">
        <div class="row profile_content_data">
          <div class="content_name">
            <div class="jp">
              ユーザーネーム
            </div>
            <div class="en">
              Username
            </div>
          </div>
          <div class=""style="width:70%;">
            <input id="username"class="form_control content_input form-control" placeholder="Blank"value="<%= current_user.name %>">
          </div>
        </div>
      </div>
      <div class="col-sm-12 profile_content">
        <div class="row profile_content_data">
          <div class="content_name">
            <div class="jp">
              性別
            </div>
            <div class="en">
              Gender
            </div>
          </div>
            <select id="gender"class="content_select"style="width:70%">
              <option value="">No Selected</option>
              <% if current_user.gender == "Male" %>
                <option value="Male" selected>Male / 男性</option>
              <% else %>
                <option value="Male">Male / 男性</option>
              <% end %>
              <% if current_user.gender == "Female" %>
                <option value="Female" selected>Female / 女性</option>
              <% else %>
                <option value="Female">Female / 女性</option>
              <% end %>
              <% if current_user.gender == "Neuter" %>
                <option value="Neuter" selected>Neuter / 中性</option>
              <% else %>
                <option value="Neuter">Neuter / 中性</option>
              <% end %>
            </select>
        </div>
      </div>
