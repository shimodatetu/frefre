      <div class="profile_content">
        <div class="row profile_content_data">
          <div class="content_name">
            <div class="jp">
              出身国
            </div>
            <div class="en">
              Country
            </div>
          </div>
          <div class="">
            <select value="<%= current_user.country %>"class="content_select"id="country"name="country"style="width:70%;padding:1vw;">
              <option value="">No selected</option>
              <%= render partial: "country" %>
