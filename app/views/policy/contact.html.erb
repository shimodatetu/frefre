
<%= form_tag('/contact/mail',method: :post) do %>
  <div class="make_thread_cover">
    <div class="panel panel-warning make_thread_category">
      <div class="panel-body content_cover">
        <div class="content_input_name"style="margin-top:20px">
          <div class="sub_jp">
            お問い合わせ
          </div>
          <div class="main_en">
            Contact Us
          </div>
        </div>
        <div class="content_input">
          <%= text_area :contact_mes ,"", id:"content",class:"content_input_form form-control jp_data_content",rows:"5",cols:"65"%>
        </div>
      </div>
      <div class="post_button_place">
        <button type="submit" class="normal_button btn send_contact"id="post"onClick='alert_modal("You succeed to send","投稿に成功しました","success")'>
          <div class="button_text">
            <div class="float_jp">
               投稿
            </div>
            Send
          </div>
        </button>
      </div>
    </div>
  </div>
<% end %>
