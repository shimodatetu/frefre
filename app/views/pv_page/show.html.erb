<% lang = session["lang"] %>
<style>
  .ui-tooltip{background: #F2FBEF}
  .tooltip-title{
    background:#000;
  }
</style>
<div class="thread_page_num"style="display:none"id="<%= @thread_page_num.to_i %>">
</div>
<div class="pvpage_all">
  <div class="panel-title"style="display:inline-block">
    <%= link_to "thread_list/popular" do %>
      <div class="panel-title-text">
        <div class="float_jp">
          人気スレッド
        </div>
        Popular Threads
      </div>
    <% end %>
  </div>
  <div class="pvpage_head">
  </div>
  <div class="thread_all"style="padding-top:10px;">
    <% there_be = false %>
    <% @groups.order(seen_num: "DESC").limit(3).each do |group| %>
      <%= link_to("/thread/show/#{group.id}" , class:"thread_link") do %>
        <% there_be = true %>
        <div class="thread_cover">
          <div class="group_user_cover">
            <div class="group_img_cover">
              <object>
              <%= link_to "/other_profile/#{group.user.id}" do %>
                <% if group.user.image == 0 %>
                  <% if group.user.photo.nil? %>
                    <%= image_tag("/userimage/user1.png", :class => "group_img") %>
                  <% else %>
                    <%= image_tag show_image_user_path(group.user), :class => "group_img" %>
                  <% end %>
                <% else %>
                  <%= image_tag("/userimage/user#{group.user.image}.png", :class => "group_img") %>
                <% end %>
              <% end %>

              </object>
            </div>
          </div>
          <div class="thread_content">
            <div class="post_content_cover">
              <div class="user_name">
                <object>
                  <% if !logged_in? || current_user.id != group.user.id %>
                    <%= link_to "/other_profile/#{group.user.id}" do %>
                      <%= simple_format(text_url_to_link(h(group.user.name))) %>
                    <% end %>
                  <% else %>
                    <%= link_to "/profile" do %>
                      <%= simple_format(text_url_to_link(h(group.user.name))) %>
                    <% end %>
                  <% end %>
                  <div class="create_time"style="float:right">
                    <%= group.created_at.strftime('%Y/%m/%d') %>
                  </div>
                </object>
              </div>
              <div class="post_content_position en_position">
                <div class="thread_title">
                  <div class="title_padding no_inline">
                    <%= simple_format(text_url_to_link(h(group.title_en))) %>
                  </div>
                </div>
                <div class="post_content en">
                  <div class="post_content_text no_inline">
                    <%= simple_format(text_url_to_link(h(group.posts.first.content_eng))) %>
                  </div>
                </div>
                <div class="see_more">
                  See more
                </div>
              </div>
              <div class="post_content_position_space">
                <span class="slider_icon glyphicon glyphicon-resize-horizontal"></span>
              </div>
              <div class="post_content_position jp_position">
                <div class="thread_title">
                  <div class="title_padding no_inline">
                    <% require 'uri' %>
                    <%= simple_format(text_url_to_link(h(group.title_jp))) %>
                  </div>
                </div>
                <div class="post_content jp">
                  <div class="post_content_text">
                    <%= simple_format(text_url_to_link(h(group.posts.first.content_jap))) %>
                  </div>
                </div>
                <div class="see_more">
                  もっと見る
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <% if there_be == false %>
      <div class="not_found">
        <div class="en">
          There is no thread created.
        </div>
        <div class="jp">
          まだスレッドが作成されていません。
        </div>
      </div>
    <% else %>
      <!--<div class="more_thread_dot">
        <div class="dot">•</div>
        <div class="dot">•</div>
        <div class="dot">•</div>
      </div>-->
      <%= link_to "thread_list/popular" do %>
        <div class="see_more_thread">
          See More / もっと見る
        </div>
      <% end %>
    <% end %>
  </div>
