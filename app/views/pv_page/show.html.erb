<% lang = session["lang"] %>
<script>
  $(function(){
    //$(".example").scrollLeft(3000 - 300);
    $(".example").scroll(function(){
      console.log($(".example").scrollLeft())
      var scroll = $(".example").scrollLeft();
      var en_per = scroll / 5760 * 100;
      var jp_per = 100 - en_per;
      if(scroll < 750){
        $(".en_position").attr("style","display:none;");
        $(".jp_position").attr("style","width:calc(100% - 50px)");
      }
      else if(scroll > 5000){
        $(".en_position").attr("style","width:calc(100% - 50px)");
        $(".jp_position").attr("style","display:none");
      }
      else{
        $(".en_position").attr("style","width:calc("+en_per+"% - 15px)");
        $(".jp_position").attr("style","width:calc("+jp_per+"% - 15px)");
      }

    });

    $('#slider').slider({
      formatter: function(value) {
        if(value != 0){
          var en_per = value / 10;
          var jp_per = (1000 - value) / 10;
          if(value < 100){
            $(".en_position").attr("style","display:none;");
            $(".jp_position").attr("style","width:calc(100% - 50px)");
            $(".post_content_position_space").attr("style","display:none;");
          }
          else if(value > 900){
            $(".en_position").attr("style","width:calc(100% - 50px)");
            $(".jp_position").attr("style","display:none");
            $(".post_content_position_space").attr("style","display:none;");
          }
          else{
            $(".en_position").attr("style","width:calc("+en_per+"% - 15px)");
            $(".jp_position").attr("style","width:calc("+jp_per+"% - 15px)");
            $(".post_content_position_space").removeAttr("style");
          }
        }
      }
    });

    $(".en_position").attr("style","width:calc(50% - 15px");
    $(".jp_position").attr("style","width:calc(50% - 15px)");
  })
</script>
