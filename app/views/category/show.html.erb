<div class="pvpage_all">
  <div class="thread-panel-title" style="display:inline-block">
    <div class="panel-title-text">
      <span class="float_en">
        <p><%= @threadtype.type_en %></p>
      </span>
      <span class="float_jp">
        <p><%= @threadtype.type_jp %></p>
      </span>
    </div>
  </div>
  <% there_be = false %>
  <div class="thread_all thread_all_group"style="padding-top:10px;">
    <% @groups.order(seen_num: "DESC").offset(@thread_page_num*(@page_id - 1)).limit(@thread_page_num).each do |group| %>
      <% there_be = true %>
      <%= render partial:"/groups/group", locals: { group:group,type:"normal" } %>
    <% end %>
    <% if there_be == false %>
      <div class="not_found">
        <div class="en">
          There are no threads.
        </div>
        <div class="jp">
          スレッドはありません。
        </div>
      </div>
    <% else %>
      <%= render partial:"/layouts/page", locals: { page_id:@page_id,page_num:@page_num,start_num:@start_num,end_num:@end_num } %>
    <% end %>
  </div>
</div>
