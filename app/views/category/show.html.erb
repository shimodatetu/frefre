<% lang = session["lang"] %>
<div class="category_list_all_cover">
  <div class="category_head">
    <div class="panel-title">
      <div class="panel-title-text">
        <div class="float_jp">
          カテゴリ一覧
        </div>
        Categoru List
      </div>
    </div>
  </div>
  <div class="panel panel-warning big_category_list all_category_list">
    <div class="panel-body category_content">
      <% @category.each do |cate| %>
        <div class="bigcategory_only">
          <div id="<%= cate.id %>"class="category_title">
            <div class="cate_icon">
              <div class="change_icon glyphicon glyphicon-chevron-down"></div>
            </div>
            <div class="cate_name">
              <div class="float_jp">
                <%= cate.name_jp %>
              </div>
              <%= cate.name_en %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="panel-body category_all_content row">
      <% @category.each do |cate| %>
        <div class="panel panel-warning category_panel<%= cate.id %>">
          <div class="bigcategory_add panel-heading">
            <div class="category_title panel-title">
              <div class="float_jp">
                <%= cate.name_jp %>
              </div>
              <%= cate.name_en %>
            </div>
          </div>
          <ul class="smallcategory panel-body">
            <% cate.smallcategories.each do |s_cate| %>
              <li class="text col-sm-4">
                <%= link_to "/category/smallcategory/#{s_cate.id}" do %>
                  <div class="float_jp">
                    <%= s_cate.name_jp %>
                  </div>
                  <%= s_cate.name_en %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

</div>

<script type="text/javascript">
  $(".category_title").on("click",function(){
    var scroll_place = $(".category_panel"+$(this).attr("id")).offset().top;
    scroll_place -= 60;
    $("html").animate({scrollTop:scroll_place},"normal");
  });
</script>
