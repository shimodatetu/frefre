<% smallcategory_id = params[:id].to_i %>
<% smallcategory =  @categories.find(smallcategory_id)%>
<% lang = session["lang"] %>

<div class="pvpage_all">
  <div class="lang_bar_cover">
    <div class="lang_bar">
      <div class="country_flag en_country">
        <%= image_tag "/eng.png", class: "image" %>
      </div>
      <input id="slider" data-slider-id='ex1Slider' type="text" data-slider-min="0"
          data-slider-max="100" data-slider-step="1" data-slider-value="50"/>
      <div class="country_flag jp_country">
        <%= image_tag "jap.png", class: "image" %>
      </div>
    </div>
  </div>
  <div class="panel-title">
    <div class="panel-title-text">
      <div class="float_jp">
        <%= simple_format(text_url_to_link(h(smallcategory.name_jp))) %>カテゴリー
      </div>
      <%= simple_format(text_url_to_link(h(smallcategory.name_en))) %>Category
    </div>
  </div>
  <div class="pvpage_head">
  </div>
  <div class="thread_all thread_all_group"style="padding-top:10px;">
    <% there_be = false %>
    <% smallcategory.groups.offset(@thread_page_num*(@page_id - 1)).limit(@thread_page_num).each do |group| %>
      <%= link_to("/thread/show/#{group.id}" , class:"thread_link") do %>
        <% there_be = true %>
        <div class="thread_cover">
          <div class="group_user_cover">
            <div class="group_img_cover">

              <% url = "/profile" %>
              <% if logged_in? && current_user.id != group.user.id %>
                <% url = "/other_profile/#{group.user.id}" %>
              <% end %>
              <%= link_to url do %>
                <% if group.user.image == 0 %>
                  <% if group.user.avater.attached? %>
                    <%= image_tag group.user.avater , :class => "group_img"%>
                  <% else %>
                    <% if group.user.photo.nil? %>
                      <%= image_tag("/userimage/user1.png", :class => "group_img") %>
                    <% else %>
                      <%= image_tag show_image_user_path(group.user), :class => "group_img" %>
                    <% end %>
                  <% end %>
                <% else %>
                  <%= image_tag("/userimage/user#{group.user.image}.png", :class => "group_img") %>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="thread_content">
            <div class="post_content_cover">
              <div class="user_name">
                <% if !logged_in? || current_user.id != group.user.id %>
                  <%= link_to "/other_profile/#{group.user.id}" do %>
                    <%= simple_format(text_url_to_link(h(group.user.name))) %>
                  <% end %>
                <% else %>
                  <%= link_to "/profile" do %>
                    <%= simple_format(text_url_to_link(h(group.user.name))) %>
                  <% end %>
                <% end %>
                <div class="create_time"style="float:right">
                  <%= group.created_at.strftime('%Y/%m/%d') %>
                </div>
              </div>
              <div class="post_content_position en_position">
                <div class="thread_title">
                  <div class="title_padding no_inline">
                    <%= simple_format(text_url_to_link(h(group.title_en))) %>
                  </div>
                </div>
                <div class="post_content">
                  <div class="post_content_text">
                    <%= simple_format(text_url_to_link(h(group.first_content_en))) %>
                  </div>
                </div>
              </div>
              <div class="post_content_position_space">
                <span class="slider_icon glyphicon glyphicon-resize-horizontal"></span>
              </div>
              <div class="post_content_position jp_position">
                <div class="thread_title">
                  <div class="title_padding no_inline">
                    <%= simple_format(text_url_to_link(h(group.title_jp))) %>
                  </div>
                </div>
                <div class="post_content">
                  <div class="post_content_text">
                    <%= simple_format(text_url_to_link(h(group.first_content_jp))) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <% if there_be == false %>
      <div class="not_found">
        <div class="en">
          There is no topic in this category.
        </div>
        <div class="jp">
          このカテゴリーではまだトピックが作成されていません。
        </div>
      </div>
    <% else %>
      <div class="page_button_cover">
        <% if 1 >= @page_id.round %>
          <div class="page_button no_push">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </div>
        <% else %>
          <%= link_to("/category/smallcategory/#{smallcategory_id}/#{@page_id - 1}",class:"page_button ok_push") do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
          <% end %>
        <% end %>
        <% if @start_num.round != 1 %>
          <div class="page_button dot_show">
            ...
          </div>
        <% end %>
        <% for num in @start_num.round..@end_num.round do %>
          <% if num == @page_id.round %>
            <div class="page_button now_page">
              <%= num %>
            </div>
          <% else %>
            <%= link_to("/category/smallcategory/#{smallcategory_id}/#{num}",class:"page_button page_move") do %>
              <%= num %>
            <% end %>
          <% end %>
        <% end %>
        <% if @end_num.round != @page_num.round %>
          <div class="page_button dot_show">
            ...
          </div>
        <% end %>
        <% if @page_num.round <= @page_id.round %>
          <div class="page_button no_push">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </div>
        <% else %>
          <%= link_to("/category/smallcategory/#{smallcategory_id}/#{@page_id.round+ 1}",class:"page_button ok_push") do %>
            <span class="glyphicon glyphicon-chevron-right"></span>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
