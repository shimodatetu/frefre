<button class="delete_button_destroy"style="display:none">
</button>
<button class="profile_button_destroy"style="display:none">
</button>
<button class="report_button_destroy"style="display:none">
</button>
<% if logged_in? == true %>
  <script>
    $(document).on("click", ".profile_button_destroy", function(){
      if($(".profile_button_set").attr("id") != "<%= current_user.id %>"){
          $(".profile_button_set").removeAttr("id");
          $(".profile_button_set").attr("style","display:none");
          $(".profile_button_set").attr("class","profile_button");
      }
      else {
        $(".profile_button_set").removeAttr("id");
        $(".profile_button_set").attr("class","profile_button");
      }
    });
    $(document).on("click", ".delete_button_destroy", function(){
      if($(".delete_button_set").attr("id") != "<%= current_user.id %>"){
          $(".delete_button_set").removeAttr("id");
          $(".delete_button_set").attr("style","display:none");
          $(".delete_button_set").attr("class","delete_button");
          $(".profile_button_set").attr("style","border-top:none");
      }
      else {
        $(".delete_button_set").removeAttr("id");
        $(".delete_button_set").attr("class","delete_button");
      }
    });
    <% if !logged_in? %>
      $(document).on("click", ".report_button_destroy", function(){
        if($(".report_button_set").attr("id") != "<%= current_user.id %>"){
          $(".report_button_set").removeAttr("id");
          $(".report_button_set").attr("style","display:none");
          $(".report_button_set").attr("class","report_button");
        }
        else {
          $(".report_button_set").removeAttr("id");
          $(".report_button_set").attr("class","report_button");
        }
      });
    <% end %>
  </script>
<% end %>
