<div class="threadtype_page">
<div class="threadtype_threads">
  <ul class="nav nav-tabs title_nav" id="myTab" role="tablist">
    <li class="nav-item active green-nav width_max">
      <a class="nav-link profile_history_change2" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">
        <i class="fas fa-comments"></i>
        <div class="text_cover">
          Keyword Search / キーワード検索
        </div>
      </a>
    </li>
  </ul>
  <div class="search_result"style="margin-top: 10px;">
    <div class="category_show">
      <%= form_tag('/threadtype/search',method: :post,class: "search_form_top") do %>
        <%= text_field_tag :search_text ,@search_text, class: "form-control form_input",placeholder:"Search / 検索" %>
        <%= hidden_field_tag :type_id, params[:type] %>
        <%= hidden_field_tag :page_id, params[:page] %>
        <span class="input-group-btn">
          <button type="submit"class="btn btn-warning form_button">
            <span class="glyphicon glyphicon-search"></span>
            検索
          </button>
        </span>
      <% end %>
    </div>
    <div class="thread_all thread_all_group"style="padding-top:10px;">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item blue-nav <% if params[:type] == "6" %>active<% end %>">
          <i class="fas fa-users"></i>
          <a class="nav-link searche_change1" id="popular-tab" data-toggle="tab" href="#popular" role="tab" aria-controls="popular" aria-selected="false"style="width: auto;">
            <div class="jp">
              人気コミュニティ
            </div>
            <div class="en">
              Popular Community
            </div>
          </a>
        </li>
        <li class="nav-item blue-nav <% if params[:type] == "7" %> active<% end %>">
          <i class="fas fa-users"></i>
          <a class="nav-link search_change2" id="latest-tab" data-toggle="tab" href="#latest" role="tab" aria-controls="latest" aria-selected="false"style="width: auto;">
            <div class="jp">
              最新コミュニティ
            </div>
            <div class="en">
              Latest Community
            </div>
          </a>
        </li>
        <li class="nav-item blue-nav <% if params[:type] == "8" %> active<% end %>">
          <i class="fas fa-user"></i>
          <a class="nav-link search_change3" id="category-tab" data-toggle="tab" href="#member" role="tab" aria-controls="member" aria-selected="false"style="width: auto;">
            <div class="jp">
              メンバー
            </div>
            <div class="en">
              Member
            </div>
          </a>
        </li>
      </ul>

    </div>
  </div>
</div>
</div>