<div class="posts">
  <% if !params[:id].nil? then %>
    <% if post.group_id == params[:id].to_i then %>
      <% if post.image.blank? %>
        <%= post.user.name %>：
        <% if session['lang'] == "eng" %>
          <%= post.content_eng %>
        <% else %>
          <%= post.content_jap %>
        <% end %>
      <%end%>
      <%= image_tag post.image.url if !post.image.blank? %>
    <% end %>
  <% else %>
    <%= post.user.name %>：
    <% if session['lang'] == "eng" %>
      <%= post.content_eng %>
    <% else %>
      <%= post.content_jap %>
    <% end %>
    <%= image_tag post.image.url if !post.image.blank? %>
  <% end %>
</div>
