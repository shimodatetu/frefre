<% lang = session["lang"] %>
<% thread_id = params[:id].to_i %>
<% session["now_group"] = thread_id %>
<% mews = News.find(thread_id) %>

<div class="thread_page_num"style="display:none"id="<%= @thread_page_num.to_i %>"></div>

<% if logged_in? %>
  <div class="user_login"style="display:none"id="<%= current_user.id %>"></div>
<% end %>
<div class="thread_page">
  <div class="thread-panel-title"style="display:inline-block">
    <div class="panel-title-text">
      <span class="float_en">
        <%= simple_format(text_url_to_link(h(news.title_en))) %>
      </span>
      <span class="float_jp">
        <%= simple_format(text_url_to_link(h(news.title_jp))) %>
      </span>
    </div>
  </div>

  <div class="thread_all thread_all_post"style="padding-top:10px;">
    <div class="thread_cover_cover">
      <%= render news %>
    </div>
  </div>

</div>
