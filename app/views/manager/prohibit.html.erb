<% if manager_logged_in? %>
  <div class="prohibit_form">
    <div class="title">
      禁止ワード一覧
    </div>
    <%= link_to(manager_prohibit_alldelete_path(authenticity_token: form_authenticity_token),method: :post) do %>
      全て消す
    <% end %>
    <table class="category"border="1"style="font-size:16px;">
      <% @prohibit_all.each do |prohibit_data| %>
        <div class="prohibit_show">
          <%= link_to(manager_prohibit_delete_path(id: prohibit_data.id,authenticity_token: form_authenticity_token),method: :post) do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
          <%= prohibit_data.prohibit_words %>
        </div>
      <% end %>
    </table>

    <div class="make_prohibit">
      <%= form_for @prohibit, url: "/manager/prohibit" do |prohibit| %>
        <div class="row">
          <div class="col-sm-12">
            <%= label_tag :禁止ワード作成 %>
            <%= prohibit.text_area :prohibit_words ,placeholder:"禁止ワード",rows:"5" ,class: "form-control" %>
          </div>
          <%= submit_tag "追加" ,class:"btn btn-default",style:"margin-top:10px;margin-left:calc(50% - 25px)"%>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
