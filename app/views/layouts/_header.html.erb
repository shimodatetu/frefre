<% url = request.fullpath %>
<div class="header">
  <div class="banner_cover">
    <%= image_tag("banner.png", :class => "banner") %>
  </div>
  <div style="width:100vw;">
  </div>
  <nav class="navbar navbar-default nav-fall">
    <div id="nav-drawer">
      <input id="nav-input" type="checkbox" class="nav-unshown">
      <label id="nav-open" for="nav-input"><span></span></label>
      <label class="nav-unshown" id="nav-close" for="nav-input"></label>
      <%= link_to("/login" , class:"login_button") do %>
        <div class="float_jap">サインイン</div>
        Sign In
        <span class="">
          <%#= image_tag("ログインアイコン3.png", :class => "icon") %>
          <%#= image_tag("ダウンロード (1).jpeg", :class => "group_img") %>
        </span>
      <% end %>
      <div id="nav-content">
        <ul class="nav navbar-nav">
          <li id="/"class="link_tab">
            <%= link_to '/',class:"link_text" do %>
              <div class="text_fill
              <% if url == '/'%>
                <%= "now_page" %>
              <% end %>">
                <div class="float_jap">
                  ホーム
                </div>
                <div class="base_en">
                  Home
                </div>
              </div>
            <% end %>
          </li>
          <li class="link_tab">
            <%= link_to '/category/show',class:"link_text" do %>
              <div class="text_fill
              <% if url == '/category/show'%>
                <%= "now_page" %>
              <% end %>">
                <div class="float_jap">
                  カテゴリ一覧
                </div>
                <div class="base_en">
                  Category List
                </div>
              </div>
            <% end %>
          </li>
          <li class="link_tab">
            <%= link_to '/groups',data: {"turbolinks"=>false},class:"link_text" do %>
            <div class="text_fill
              <% if url == '/groups'%>
                <%= "now_page" %>
              <% end %>">
                <div class="float_jap">
                  スレッドの作成
                </div>
                <div class="base_en">
                  Make Thread
                </div>
              </div>
            <% end %>
          </li>
          <li class="link_tab",class:"link_text">
            <%= link_to '/profile',class:"link_text" do %>
              <div class="text_fill
              <% if url == '/profile'%>
                <%= "now_page" %>
              <% end %>">
                <div class="float_jap">
                  マイページ
                </div>
                <div class="base_en">
                  My Page
                </div>
              </div>
            <% end %>
          </li>
          <li class="link_tab">
            <%= link_to '/',class:"link_text" do %>
              <div class="float_jap">
                ガイド
              </div>
              <div class="base_en">
                Guide
              </div>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>
<div class="header_plus"></div>
