  </div>
  <nav class="navbar navbar-default nav-fall">
    <div id="nav-drawer">
      <input id="nav-input" type="checkbox" class="nav-unshown">
      <label id="nav-open" for="nav-input"><span></span></label>
      <label class="nav-unshown" id="nav-close" for="nav-input"></label>
      <%= link_to("/login" , class:"login_button") do %>
        <div class="float_jap">サインイン</div>
        Sign In
        <span class="">
          <%#= image_tag("ログインアイコン3.png", :class => "icon") %>
          <%#= image_tag("ダウンロード (1).jpeg", :class => "group_img") %>
        </span>
      <% end %>
      <div id="nav-content">
        <ul class="nav navbar-nav">
