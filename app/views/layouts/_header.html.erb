            <%= link_to '/',class:"link_text" do %>
              <div class="float_jap">
                ホーム
              </div>
              Home
            <% end %>
          </li>
          <li class="link_tab">
            <%= link_to '/category/show',class:"link_text" do %>
              <div class="float_jap">
                カテゴリ一覧
              </div>
              Category List
            <% end %>
          </li>
          <li class="link_tab">
            <%= link_to '/groups',data: {"turbolinks"=>false},class:"link_text" do %>
              <div class="float_jap">
                スレッドの作成
              </div>
              Make Thread
            <% end %>
          </li>
          <li class="link_tab",class:"link_text">
            <%= link_to '/profile',class:"link_text" do %>
              <div class="float_jap">
                マイページ
              </div>
              My Page
            <% end %>
          </li>
          <li class="link_tab">
            <%= link_to '/',class:"link_text" do %>
              <div class="float_jap">
                ガイド
              </div>
              Guide
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
